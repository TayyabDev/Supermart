<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="group0669.com.example.supermart.AddOrEditActivity"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would you like to add an user or edit one?"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/add_user"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        style="?attr/buttonStyle"
        android:layout_marginBottom="30dp"
        android:text="ADD AN USER"
        android:id="@+id/buttonAddUser"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/edit"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        style="?attr/buttonStyle"
        android:layout_marginBottom="30dp"
        android:text="Eidt AN USER"
        android:id="@+id/buttonEditUser"
        />
</LinearLayout>
