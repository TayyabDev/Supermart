<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="group0669.com.example.supermart.CustomerActivity"
    android:padding="20dp"
    android:background="@color/colorPrimaryDark"
    >

    <TextView
        android:id="@+id/textWelcomeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="monospace"
        android:text="Welcome Customer!"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textSelectOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Please select one of the following options for your shopping cart."
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/buttonRestoreShoppingCart"
        style="?attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/shopcart"
        android:fontFamily="monospace"
        android:text="RESTORE SHOPPING CART"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonAddItem"
        style="?attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@mipmap/additem"
        android:fontFamily="monospace"
        android:text="ADD ITEM" />

    <Button
        android:id="@+id/buttonCheckShoppingCart"
        style="?attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@mipmap/viewitems"
        android:fontFamily="monospace"
        android:text="View your cart" />

    <Button
        android:id="@+id/buttonRemoveItem"
        style="?attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@mipmap/removeitem"
        android:fontFamily="monospace"
        android:text="REMOVE ITEM" />

    <Button
        android:id="@+id/buttonCheckOut"
        style="?attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableStart="@mipmap/checkout"
        android:fontFamily="monospace"
        android:text="CHECKOUT" />

    <Button
        android:id="@+id/buttonSave"
        style="?attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/save"
        android:fontFamily="monospace"
        android:text="Save Cart" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="361dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Your current total is: $0"
        android:textColor="@android:color/background_dark" />


</LinearLayout>
